@model  ViewModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@Html.Partial("Main")

@Html.Partial("FooterProduct")

@section scripts {
    @Scripts.Render("~/scripts/shared/splitter.js")
    <script type="text/javascript">
        var o = @Html.Raw(Model.JSOptions);
        $.extend(o,
            {
                Method: requestSplitter,
                validationNumberMessage: "@Html.Raw(Model.Resources["SplitterNumberException"])",
                validationRangeMessage: "@Html.Raw(Model.Resources["SplitterRangeException"])"
            });
    </script>
}